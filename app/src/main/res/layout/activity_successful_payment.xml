<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thelayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edcdc0"
    tools:context=".Successful_payment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="#53c244">

        <ImageView
            android:id="@+id/ceklis"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/lingkaran"/>

        <ImageView
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_baseline_check_circle_24"/>
        
        <TextView
            android:id="@+id/paymentSucess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment successful"
            android:layout_below="@id/ceklis"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed-medium"/>


        <TextView
            android:id="@+id/rupiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentSucess"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="Rp.1.000.000"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/ilikeit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_thumb_up_24"
            android:layout_below="@id/rupiah"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/idontlikeit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_thumb_down_24"
            android:layout_below="@id/rupiah"
            android:layout_toRightOf="@id/ilikeit"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="#1e9c35"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/rupiah"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f0e8d5"
    android:layout_height="match_parent"
    tools:context=".metodePembayaran">

    <TextView
        android:id="@+id/pilihMetode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih metode pembayaran"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="30dp"/>


    <TextView
        android:id="@+id/gopay"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:drawableStart="@drawable/gopay"
        android:text="GOPAY"
        android:padding="20dp"
        android:background="@drawable/metodepembayaran"
        app:layout_constraintTop_toBottomOf="@id/pilihMetode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav"
        android:background="#e4f7cd"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
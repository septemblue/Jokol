<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f0e8d5"
    android:layout_height="match_parent"
    tools:context=".metodePembayaran">

    <TextView
        android:id="@+id/pilihMetode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih metode pembayaran"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="30dp"/>


    <TextView
        android:id="@+id/gopay"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:drawableStart="@drawable/gopay"
        android:text="GOPAY"
        android:padding="20dp"
        android:background="@drawable/metodepembayaran"
        app:layout_constraintTop_toBottomOf="@id/pilihMetode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#e4f7cd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homeBtn"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:background="@drawable/ic_baseline_home_24"
            android:minWidth="0dp" />

        <TextView
            android:id="@+id/transactionBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_toLeftOf="@id/profileBtn"
            android:layout_toRightOf="@id/homeBtn"
            android:background="@drawable/ic_baseline_shopping_cart_24" />

        <TextView
            android:id="@+id/profileBtn"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_account_circle_24"
            android:minWidth="0dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
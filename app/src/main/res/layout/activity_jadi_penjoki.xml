<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edcdc0"
    tools:context=".jadiPenjoki">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:padding="-20dp"
        android:hint="Username"
        android:gravity="center_horizontal"
        android:background="@drawable/edittext"
        app:layout_constraintTop_toBottomOf="@id/userImage"/>

    <ImageView
        android:id="@+id/uploadID"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="30dp"/>
    
    <Button
        android:id="@+id/uploadIDBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/uploadID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:text="Upload ID"/>

    <ImageView
        android:id="@+id/uploadSelfie"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/uploadIDBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/uploadSelfieBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/uploadSelfie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:text="Upload ID"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/uploadSelfieBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:text="Confirm"/>

    <RelativeLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#e4f7cd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homeBtn"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:background="@drawable/ic_baseline_home_24"
            android:minWidth="0dp" />

        <TextView
            android:id="@+id/transactionBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_toLeftOf="@id/profileBtn"
            android:layout_toRightOf="@id/homeBtn"
            android:background="@drawable/ic_baseline_shopping_cart_24" />

        <TextView
            android:id="@+id/profileBtn"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_account_circle_24"
            android:minWidth="0dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>